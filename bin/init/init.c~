    uint64_t pid;
    int status;

    puts("Executing fork()");
    pid = fork();

    if(pid == 0) {
        //Include to environment facility or change to execve.
        puts("Executing execvpe()");
        execvpe("/bin/sbush", sargv, senvp);
    }
    else {
        puts("Executing waitpid()");
        waitpid(pid, &status);
    }

    while(1);

    return 0;
}
